<link rel="stylesheet" href="/css/musicplayer.css">

<div class="player-container">
    <img src="/images/1.jpg" alt="Alan" id="playmusic-poster">
    
    <h5 id="title">Fade<br>
        <div class="subtitle">Alen Walker</div>
    </h5>
    <div class="icon">
        <i class="fa-solid fa-backward-step" id="back-track"></i>
        <i class="fa-solid fa-play" id="play-track"></i>
        <i class="fa-solid fa-forward-step" id="next-track"></i>
    </div>
    <span id="currentStart">0:00</span>
    <div class="bar">
        <input type="range" id="seek" min="0" value="0" max="100">
        <div class="bar2" id="bar2"></div>
        <div class="dot"></div>
    </div>
    <span id="currentEnd">0:00</span>

    <div class="vol">
        <i class="fa-solid fa-volume-low" id="vol_icon"></i>
        <input type="range" id="vol" min="0" value="30" max="100">
        <div class="vol_bar"></div>
        <div class="dot" id="vol_dot"></div>
    </div>
</div>